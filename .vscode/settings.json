{
    "files": {
        "exclude": {
            "**/.git": true,
            "**/.gitmodules": true,
            "**/.svn": true,
            "**/.hg": true,
            "**/CVS": true,
            "**/.DS_Store": true
        },
        "associations": {
            "*.md": "markdown"
        },
        "watcherExclude": {
            "**/.git/objects/**": true,
            "**/.git/subtree-cache/**": true,
            "**/node_modules/**": true
        }
    },
    "markdown": {
        "preview": {
            "breaks": true,
            "linkify": true
        }
    },
    "search.exclude": {
        "**/.git": true,
        "**/.gitmodules": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true
    }
} 